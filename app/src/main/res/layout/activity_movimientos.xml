<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MovimientosActivity">

    <Spinner
        android:id="@+id/spTipo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/etLongitud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Longitud"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@+id/etLatitud"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/etMotivo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Motivo"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@+id/spTipo"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/etMonto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Monto"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@+id/etMotivo"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/etURL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="url"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@+id/etLongitud"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/btnTomar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Foto"
        app:layout_constraintTop_toBottomOf="@+id/etURL"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/etLatitud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Latitud"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@+id/etMonto"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/btnGuardarMovimiento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardar"
        app:layout_constraintTop_toBottomOf="@+id/btnTomar"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:id="@+id/imgMovimiento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/btnGuardarMovimiento"
        tools:layout_editor_absoluteX="0dp"
        tools:srcCompat="@tools:sample/avatars" />

</androidx.constraintlayout.widget.ConstraintLayout>